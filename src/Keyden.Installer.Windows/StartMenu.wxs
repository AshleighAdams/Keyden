<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <DirectoryRef Id="ApplicationStartMenuFolder">
      <Component Id="ApplicationShortcut" Guid="*">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="!(bind.Property.ProductName)"
                  Description="Customizable SSH Agent"
                  Target="[!Keyden.exe]"
                  WorkingDirectory="ApplicationInstallFolder"/>
        <RemoveFolder Id="RemoveShortcut" Directory="ApplicationStartMenuFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\!(bind.Property.ProductName)" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
