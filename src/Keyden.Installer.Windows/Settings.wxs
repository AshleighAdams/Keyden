<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Fragment>
    <DirectoryRef Id="ApplicationLocalAppDataProductFolder">
      <Component Id="ApplicationIniFolder" Guid="*">
        <CreateFolder />
        <RemoveFile Id="RemoveCache" On="uninstall" Name="keystore-controller-data.json"/>
        <RemoveFile Id="RemoveSettings" On="uninstall" Name="settings.json"/>
        <RemoveFolder Id="RemoveSettingsProductFolder" Directory="ApplicationLocalAppDataProductFolder" On="uninstall"/>
        <RegistryValue Root="HKCU" Key="Software\!(bind.Property.Manufacturer)\!(bind.Property.ProductName)" Name="hasappdatafolder" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
