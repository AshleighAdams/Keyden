<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
             x:Class="Keyden.Views.KeyIcon">
  <Viewbox>
    <Border Padding="1.5">

      <Grid Grid.Column="0">
        <Border Width="30" Height="30" CornerRadius="5" Background="#ccc" />
        <Border Width="24" Height="24" CornerRadius="5" Background="#555" />
        <i:Icon Value="mdi-console-line" FontSize="20" Foreground="#fff">
          <i:Icon.RenderTransform>
            <TransformGroup>
              <ScaleTransform ScaleX="1" ScaleY="1" />
              <TranslateTransform X="0" Y="-5"/>
            </TransformGroup>
          </i:Icon.RenderTransform>
        </i:Icon>
        <i:Icon Value="fa-key" FontSize="20" Foreground="#ffca65">
          <i:Icon.RenderTransform>
            <TransformGroup>
              <RotateTransform Angle="225" />
              <ScaleTransform ScaleX="1" ScaleY="-1" />
              <TranslateTransform X="-5" Y="9"/>
            </TransformGroup>
          </i:Icon.RenderTransform>
        </i:Icon>
      </Grid>
      
    </Border>
  </Viewbox>
</UserControl>
